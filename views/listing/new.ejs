<%- layout('/layouts/boilerplate') %>

<body>
    <h3>Add new ---------</h3>
    <div class="row">
        <div class="col-8 offset-2">
    <form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input class="form-control" type="text" name="title" placeholder="Enter your title"  required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div>
            <label for="description" class="form-label">description</label>
            <textarea name="description" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please enter the short Description.
            </div>
        </div>
        <!-- <div>
            <label for="image" class="form-label">Image</label>
            <input type="text"class="form-control" name="image" placeholder="Enter yuor image-url"  >
        </div>   -->
        <div>
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file"class="form-control" name="image" required>
            <div class="invalid-feedback">
                Upload the file.
            </div>
        </div>   
        
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control"name="price" required placeholder="Enter your price">
            <div class="invalid-feedback">
                Price should be valid!
            </div>
        </div>
        
        <div  class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label>
            <input type="text"class="form-control" name="location" required placeholder="Enter yuor location">
            <div class="invalid-feedback">
                Location should to be valid!
            </div>
        </div>
        </div>
        <div>
            <label for="country" class="form-label">country</label>
            <input type="text"class="form-control" name="country" required placeholder="Enter yuor country">
            <div class="invalid-feedback">
                Country should to be valid!
            </div>
        </div>
        <br>
        <button class="btn btn-dark">submit</button>
    </form>
    </div>
    </div>
</body>

